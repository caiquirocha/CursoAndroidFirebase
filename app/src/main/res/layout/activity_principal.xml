<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.PrincipalActivity"
    android:orientation="vertical"
    android:background="@drawable/backgroud"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:text="MENU ADMINISTRADOR"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textSize="25dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearAddProdutos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#FFFFFF" />

                <ImageView
                    android:id="@+id/imgAddProdutos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/comida" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ADD PRODUTO" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#FFFFFF" />

            <LinearLayout
                android:id="@+id/totalVendas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#FFFFFF" />

                <ImageView
                    android:id="@+id/imgVerTodalVendas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dinheiro" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="VER TOTAL VENDAS" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>